                <!-- Products Button -->
                <Button onAction="#handleShowProducts" mnemonicParsing="false" styleClass="nav-button">
                    <graphic>
                        <VBox alignment="CENTER" spacing="5">
                            <Text styleClass="nav-icon" text="ðŸ“¦" />
